/* 颜色变量 */
.red {
  color: #EC808D !important;
}
.grey {
  color: #aaaaaa !important;
}
.orange {
  color: #F59A23 !important;
}
.green {
  color: #32B295 !important;
}
/**
 * mixin 通用方法
 */
button, uni-button {
  font-size: 28rpx;
  height: 84rpx;
  line-height: 84rpx;
  border-radius: 8rpx;
}
uni-checkbox .uni-checkbox-input {
  border-radius: 50%;
  margin-right: 20rpx;
}
uni-checkbox:not([disabled]) .uni-checkbox-input:hover {
  border-color: initial;
}
uni-checkbox .uni-checkbox-input .uni-checkbox-input-checked {
  border-color: #32B295;
}
uni-page-head .uni-page-head__title {
  font-weight: normal;
}
.form {
  background-color: #fff;
}
.form .uni-form-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 28rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  position: relative;
}
.form .uni-form-item .uni-input {
  text-align: right;
  font-size: 28rpx;
}
.form .uni-form-item:after {
  width: 100%;
  position: absolute;
  box-sizing: border-box;
  content: " ";
  pointer-events: none;
  left: 0;
  bottom: 0;
  border-bottom: 1px solid #ebedf0;
  -webkit-transform: scaleY(0.5);
          transform: scaleY(0.5);
}
.flex-center, .flex-center-between {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.flex-center-between {
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.no-data {
  text-align: center;
  color: #808080;
  margin-top: 30%;
}
